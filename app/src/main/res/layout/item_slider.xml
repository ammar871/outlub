<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_13sdp"
    android:layout_marginRight="@dimen/_13sdp"
    app:cardCornerRadius="@dimen/_10sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_slider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            app:cardCornerRadius="@dimen/_8sdp"

            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"

                />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_name_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/homefont"
            android:padding="@dimen/_4sdp"
            android:text="dkjdjd"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_slider" />

        <TextView
            android:id="@+id/tv_name_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableRight="@drawable/ic_baseline_local_shipping_24"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/homefont"
            android:paddingLeft="@dimen/_14ssp"
            android:paddingTop="@dimen/_4sdp"
            android:text="dkjdjd"
            android:textColor="@color/light_black"
            android:textSize="@dimen/_12ssp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_slider" />

        <TextView
            android:id="@+id/tv_name_order_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/homefont"
            android:padding="@dimen/_4sdp"
            android:singleLine="true"
            android:text="dkjdjd"
            android:textSize="@dimen/_14ssp"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_order_desc">

            <ImageView
                android:id="@+id/img_rate_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/homefont"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_baseline_face_24"
                android:text="dkjdjd"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_rate_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/homefont"
                android:padding="@dimen/_4sdp"
                android:text="dkjdjd"

                android:textSize="@dimen/_14ssp"

                app:layout_constraintRight_toLeftOf="@id/img_rate_order"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_19ssp"
                android:fontFamily="@font/homefont"
                android:padding="@dimen/_4sdp"
                android:text="التوصيل "

                android:textSize="@dimen/_14ssp"

                app:layout_constraintRight_toLeftOf="@id/tv_rate_order"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_order_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawableRight="@drawable/ic_baseline_local_offer_24"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/homefont"
            android:padding="@dimen/_4sdp"
            android:singleLine="true"
            android:text="عرض خاص 57% _عرض خاص  "
            android:textColor="@color/offers"
            android:textSize="@dimen/_14ssp"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_rate" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>