<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/layout_menu_binding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"

        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/image_author"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:src="@drawable/logo"
                android:contentDescription="@string/app_name" />

            <TextView

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/image_author"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:id="@+id/tv_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@font/homefont"
                android:text="المعــرفة الحديثة"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:padding="1dp"
               />

            <TextView

                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintRight_toLeftOf="@id/image_author"
                android:layout_marginRight="@dimen/_10sdp"

                android:id="@+id/tv_cantry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/homefont"
                android:text="eygpt "
                android:padding="1dp"
                android:textSize="@dimen/_12ssp"

                android:textStyle="bold" />

            <ImageView
                android:padding="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/image_sitting"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:scaleType="fitXY"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_baseline_settings_24"
                android:contentDescription="@string/app_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:gravity="right"
            android:orientation="vertical"
            android:weightSum="7">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"

                android:layout_weight="1">

                <TextView

                    android:id="@+id/homee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bt_design1"


                    android:drawableRight="@drawable/ic_homepage"

                    android:drawablePadding="20dp"
                    android:fontFamily="@font/homefont"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:text="الرئيسية"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#95292827" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bt_design1">

                <TextView

                    android:id="@+id/tv_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/bt_design1"
                    android:drawableRight="@drawable/ic_order"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/homefont"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:text="اعادة الطلب "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#95292827" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bt_design1">


                <TextView
                    android:id="@+id/tv_offer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/bt_design1"
                    android:drawableRight="@drawable/ic_discount"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/homefont"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:text="العروض"
                    android:textColor="@color/black"
                    android:textSize="20sp" />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#95292827" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bt_design1">

                <TextView
                    android:id="@+id/tv_notification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bt_design1"
                    android:drawableRight="@drawable/ic_notifications"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/homefont"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:text="الاشعارات"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#95292827" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bt_design1">


                <TextView
                    android:id="@+id/tv_voucher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bt_design1"
                    android:drawableRight="@drawable/ic_voucher"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/homefont"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:text="القسائم"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#95292827" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bt_design1">


                <TextView
                    android:id="@+id/tv_help"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bt_design1"
                    android:drawableRight="@drawable/ic_help"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/homefont"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:text="احصل على المساعدة"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#95292827" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bt_design1">


                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bt_design1"
                    android:drawableRight="@drawable/ic_icons_about"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/homefont"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:text="حول التطبيق"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#95292827" />

            </RelativeLayout>

            <!--  <RelativeLayout
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:background="@drawable/bt_design1">

                  <TextView
                      android:id="@+id/nav_logout"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@drawable/bt_design1"
                      android:drawableRight="@drawable/ic_baseline_exit_to_app_24"
                      android:drawablePadding="20dp"
                      android:fontFamily="@font/homefont"
                      android:gravity="center_vertical"
                      android:paddingRight="16dp"
                      android:text="تسجيل الخروج"
                      android:textColor="@color/black"
                      android:textSize="20sp" />

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_alignParentBottom="true"
                      android:background="#95292827" />

              </RelativeLayout>-->

        </LinearLayout>


    </LinearLayout>
</layout>